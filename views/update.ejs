<%- include partials/header.ejs %>   
<%- include partials/main_nav.ejs %>

<!--Cont for update page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Name"
                    name="contactName"
                    value="<%= businessContacts.contactName %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="phoneNumberTextField">Contact Number</label>
                    <input type="tel" class="form-control"
                    id="phoneNumberTextField"
                    placeholder="Enter Phone Number"
                    name="contactNumber" 
                    minlength="10"
                    maxlength="10"
                    value="<%= businessContacts.contactNumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">E-mail ID</label>
                    <input type="email" class="form-control"
                    id="emailTextField"
                    placeholder="Enter Email Address"
                    name="email"
                    value="<%= businessContacts.email %>"
                    required>
                </div>
                
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i>Submit</button>

                    <a href="/businessContactList" class="btn btn-warning">
                        <i class="fas fa-undo"></i>Cancel</a>

            </form>

    </div>
</div>


<%- include partials/bottom_nav.ejs %>
<%- include partials/footer.ejs %>